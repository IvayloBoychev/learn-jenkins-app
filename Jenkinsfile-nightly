pipeline {
    agent any

    environment {
        NETLIFY_SITE_ID = '31979881-0b34-4a3e-ac11-1e4a489e11d3'
        NETLIFY_AUTH_TOKEN = credentials('netlify-token')
        REACT_APP_VERSION = "1.0.$BUILD_ID"
    }

    stages {

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t my-playwright .'
            }
        }
    }
}